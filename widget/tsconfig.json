{
  "compilerOptions": {
    "target": "esnext",
    "module": "amd",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "rootDir": "src",
    "outDir": "js",
    "moduleResolution": "Node",
    "removeComments": true,
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    },
    "watch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "typeAcquisition": {
    "include": [
      "jquery",
      "underscore"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "legacy"
  ]
}